# Server Configuration (Local Only)
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
REQUEST_TIMEOUT=30

# Security - CHANGE THIS!
JWT_SECRET=your-super-secret-jwt-key-change-this-min-32-chars

# CORS & Allowed Origins
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=[".py", ".js", ".ts", ".json", ".md", ".yml", ".yaml"]

# Database (Local SQLite)
DATABASE_URL=sqlite:///./data/agent.db
DB_ECHO=False
DB_POOL_SIZE=5

# Redis (Local)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
SESSION_EXPIRATION_HOURS=24

# Ollama Configuration (Local via SSH tunnel)
# Setup: ssh -L 11434:localhost:11434 z-desktop
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:480b
OLLAMA_API_KEY=
OLLAMA_TIMEOUT=300
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSION=768

# Vector Database (Chroma - Local)
CHROMA_DATA_DIR=./data/chroma
CHROMA_PERSIST=True

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=
ADMIN_TELEGRAM_IDS=[]
TELEGRAM_WEBHOOK_URL=

# If true, use the Python agent's Telegram implementation instead of the Node.js bot
# Set to 'true' to run the Python Telegram bot on FastAPI startup
USE_PYTHON_TELEGRAM=false

# Celery Task Queue (Local Redis)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIMEOUT=3600

# Monitoring
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=8001
SENTRY_DSN=

# File Paths (Local)
DATA_DIR=./data
WORKSPACE_DIR=./data/workspaces
MEMORY_DIR=./data/memory
LOGS_DIR=./logs

# Security Hardening
ALLOWED_COMMANDS=["git", "npm", "python", "node", "docker"]
ENABLE_PATH_VALIDATION=True
ENABLE_SYMLINK_PROTECTION=True
ENABLE_CONTENT_SECURITY=True
MAX_INPUT_LENGTH=10000

# Feature Flags
ENABLE_AUTO_LEARNING=True
ENABLE_MEMORY_PERSISTENCE=True
ENABLE_MONITORING=True
ENABLE_RATE_LIMITING=True
