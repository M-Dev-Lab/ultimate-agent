# API Configuration
APP_NAME="Ultimate Coding Agent"
APP_VERSION="3.0.0"
DEBUG=False
ENVIRONMENT=development

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
REQUEST_TIMEOUT=30

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS & Allowed Origins
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=[".py", ".js", ".ts", ".json", ".md", ".yml", ".yaml"]

# Database
DATABASE_URL=sqlite:///./data/app.db
DB_ECHO=False
DB_POOL_SIZE=20

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
SESSION_EXPIRATION_HOURS=24

# Ollama LLM Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:7b
OLLAMA_TIMEOUT=120
EMBEDDING_MODEL=nomic-embed-text

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=
ADMIN_TELEGRAM_IDS=[]
TELEGRAM_WEBHOOK_URL=

# Celery Task Queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIMEOUT=3600

# Monitoring
LOG_LEVEL=INFO
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=8001
SENTRY_DSN=

# File Paths
DATA_DIR=./data
WORKSPACE_DIR=./data/workspaces
MEMORY_DIR=./data/memory
LOGS_DIR=./logs

# Security Hardening
ALLOWED_COMMANDS=["git", "npm", "python", "node", "docker"]
ENABLE_PATH_VALIDATION=True
ENABLE_SYMLINK_PROTECTION=True
ENABLE_CONTENT_SECURITY=True
MAX_INPUT_LENGTH=10000

# Feature Flags
ENABLE_AUTO_LEARNING=True
ENABLE_MEMORY_PERSISTENCE=True
ENABLE_MONITORING=True
ENABLE_RATE_LIMITING=True
